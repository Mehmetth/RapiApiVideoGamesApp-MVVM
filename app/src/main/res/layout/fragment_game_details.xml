<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.gamesdetail.GameDetailsFragment"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/game_image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/black"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/like_image_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_unlike"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/game_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/game_image_view"
        android:fontFamily="@font/calibri_bold"
        android:textColor="@android:color/black"
        android:textSize="37sp"
        android:paddingStart="15dp"
        android:text="Name of Game"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/game_released_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/game_name_text_view"
        android:fontFamily="@font/calibri_regular"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:paddingStart="15dp"
        android:text="Release date"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/game_metacritic_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/game_released_text_view"
        android:fontFamily="@font/calibri_regular"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:paddingStart="15dp"
        android:text="Metacritic Rate"
        tools:ignore="RtlSymmetry" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/game_metacritic_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/game_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:textSize="19sp" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
