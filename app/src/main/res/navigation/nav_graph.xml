<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/gamesFragment">

    <fragment
        android:id="@+id/gamesFragment"
        android:name="com.honeycomb.videogamesapp.ui.games.GamesFragment"
        android:label="Games"
        tools:layout="@layout/fragment_games">
        <action
            android:id="@+id/action_gamesFragment_to_gameDetailsFragment"
            app:destination="@id/gameDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameDetailsFragment"
        android:name="com.honeycomb.videogamesapp.ui.gamesdetail.GameDetailsFragment"
        android:label="GameDetails"
        tools:layout="@layout/fragment_game_details">
        <argument
            android:name="game"
            app:argType="com.honeycomb.videogamesapp.data.RapidGame" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.honeycomb.videogamesapp.ui.favorite.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favoriteFragment_to_gameDetailsFragment"
            app:destination="@id/gameDetailsFragment" />
    </fragment>
</navigation>